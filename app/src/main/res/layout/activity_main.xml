<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bogdanorzea.bluemusicplayer.MainActivity">

    <TextView
        android:id="@+id/library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_library_music_black_48dp"
        android:drawablePadding="24dp"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="@string/title_library"

        android:textSize="24sp" />

    <TextView
        android:id="@+id/now_playing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_music_note_black_48dp"
        android:drawablePadding="24dp"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="@string/title_now_playing"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/store"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_store_closed_icon_48dp"
        android:drawablePadding="24dp"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="@string/title_store"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_settings_input_composite_black_48dp"
        android:drawablePadding="24dp"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:text="@string/title_settings"
        android:textSize="24sp" />
</LinearLayout>
